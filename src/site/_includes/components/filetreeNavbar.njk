<nav class="navbar">
    <div class="navbar-inner">
        <span style="font-size: 1.5rem; margin-right: 10px;" @click="showFilesMobile=!showFilesMobile"><i  data-lucide="menu"></i></span>
        {% for imp in dynamics.filetree.beforeTitle %}
            {% include imp %}
        {% endfor %}
        {% set logoSrc = meta.siteLogoPath %}
        {% if not logoSrc %}
            {% set logoSrc = "/img/logo.svg" %}
        {% endif %}
        <a href="/" class="site-brand" aria-label="Home">
            <img class="site-logo" src="{{logoSrc}}" alt="{{meta.siteName}}" width="26" height="26" loading="eager" decoding="async" />
            <h1 class="site-title">{{meta.siteName}}</h1>
        </a>
        {% for imp in dynamics.filetree.afterTitle %}
            {% include imp %}
        {% endfor %}
    </div>

    {% if settings.dgEnableSearch === true%}
        {% include "components/searchButton.njk" %}
    {%endif%}
</nav>
